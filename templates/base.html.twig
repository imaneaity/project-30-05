<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
       <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <link rel="stylesheet" href="style.css">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>

        <header class="header" >
        <div class="header-left">
            <a class="header-item" href="{{ path('app_pizza_home') }}">
                <i class="fa-solid fa-house"></i>
            </a>
            {% if app.user %}
                    <p>Bienvenu {{app.user.email}}</p>
            {% endif %}
        </div>


        <div class="header-right">
            {% if app.user %}
            
                    <a class="header-item" href="{{ path('app_logout')}}"> 
                        <i class="fa-solid fa-right-from-bracket"></i>
                    </a>
                
            {% else %}
            
                    <a class="header-item" href="{{ path('app_login')}}"> 
                        <i class="fa-solid fa-door-open"></i>
                    </a>
        
            {% endif %}
            <a class="header-item" href="#panier">
                <i class="fa-solid fa-basket-shopping"></i>
            </a>

            <a class="header-item" href="#user">
                <i class="fa-solid fa-user"></i>
            </a>

        </div>
        
        </header>

        {% block body %}{% endblock %}
    </body>
</html>
